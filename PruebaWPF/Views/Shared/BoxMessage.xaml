<Window Loaded="Window_Loaded" x:Class="PruebaWPF.Views.Shared.BoxMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        materialDesign:ShadowAssist.CacheMode="{x:Null}"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebaWPF.Views.Shared"
        xmlns:UserControl="clr-namespace:PruebaWPF.UserControls"
        mc:Ignorable="d" 
        AllowsTransparency="True"
        Topmost="True"
        WindowStyle="None"
        Title="Información"
        WindowStartupLocation="CenterScreen" Width="Auto" Height="Auto">
    <Window.Background>
        <SolidColorBrush Color="#424242" Opacity="0"/>
    </Window.Background>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="LayoutMessage">
            <UserControl:MessageCard x:Name="Msj">

            </UserControl:MessageCard>
        </StackPanel>
    </Grid>
</Window>
